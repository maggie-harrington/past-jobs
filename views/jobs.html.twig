<html>
    <head>
        <title>List of Jobs</title>
    </head>
    <body>
        <h1>List of Jobs</h1>

        {% if jobs is not empty %}
            <p>Here are all your jobs:</p>
            <ul>
                {% for job in jobs %}
                    <li>{{ job.getCompany }}</li>
                    <li>{{ job.getDateRange}}</li>
                    <li>{{ job.getPosition }}</li>
                    <br>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/jobs' method='post'>
            <label for='company'>Company Name</label>
            <input id='company' name='company' type='text'><br><br>

            <label for='date_range'>Date Range</label>
            <input id='date_range' name='date_range' type='text'><br><br>

            <label for='position'>Position</label>
            <input id='position' name='position' type='text'><br><br>

            <button type='submit'>Add job</button>
        </form>

        <form action='/delete_jobs' method='post'>
            <button type='submit'>delete</button>
        </form>
    </body>
</html>
